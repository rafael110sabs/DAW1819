extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-blue.w3-center
                h1= part.titulo
                h3= part.tipo
                h3= part.compositor
            .w3-container
                each inst in part.instrumentos
                    .w3-row
                        .w3-container.w3-light-grey.w3-padding.w3-margin
                            .w3-col.m6.w3-center
                                h4= inst.nome
                            .w3-col.m6
                                h5= inst.partitura.path
                                if inst.partitura.voz
                                    h5.w3-text-red= 'Voz: ' + inst.partitura.voz
                                if inst.partitura.clave
                                    h5.w3-text-yellow= 'Clave: ' +  inst.partitura.clave
                                if h4= inst.partitura.afinacao
                                    h5.w3-text-deep-purple= 'Afinação: ' + inst.partitura.afinacao
                .w3-col.m12.w3-light-grey.w3-padding-small.w3-margin.w3-hover-light-blue
                    h5.w3-center
                        a.w3-button.w3-hover-light-blue(href="/") Voltar
            footer.w3-container.w3-blue.w3-center.w3-padding
                address Gerado por Devolpment &copy Musical S.A.