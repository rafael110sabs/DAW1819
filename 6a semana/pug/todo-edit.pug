extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-yellow
                    h3 To-Do Edit
            .w3-container.w3-margin
                p Editing the information about this To-Do...
                form.w3-container.w3-(action="edit?id="+todo.id method="POST")
                    table.w3-table-all
                        tr
                            th Task Description
                            td
                                input.w3-input.w3-border.w3-light-grey(type='text' name='task' value=todo.task)
                        tr
                            th Registration Date
                            td= todo.date
                        tr
                            th Deadline
                            td
                                input.w3-input.w3-border.w3-light-grey(type='datetime-local' name='expiration' value=todo.expiration)
                        tr
                            th Type
                            td
                                if (todo.type == 'task')
                                    select(name="type")
                                        option(value="task") Task
                                        option(value="shop") ShopList
                                        option(value="event") Event
                                else if (todo.type == 'shop')
                                    select(name="type")
                                        option(value="shop") ShopList
                                        option(value="task") Task
                                        option(value="event") Event
                                else
                                    select(name="type")
                                        option(value="event") Event
                                        option(value="task") Task
                                        option(value="shop") ShopList
                        tr
                            th Terminated
                            td
                                select(name="done")
                                    if (todo.done)
                                        option(value="true" selected) Done
                                        option(value="false") Not done
                                    else
                                        option(value="false" selected) Not done
                                        option(value="true") Done
                    a.w3-btn.w3-amber.w3-margin(href='/todo?id=' + todo.id) Back
                    input.w3-btn.w3-amber.w3-margin(type='submit' value='Confirm')
            footer.w3-container.w3-yellow.w3-padding
                address Generated by FormApp