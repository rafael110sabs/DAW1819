extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-yellow
                    h3 To-Do Information
            .w3-container.w3-margin
                p= info
                table.w3-table-all
                    tr
                        th Task Description
                        td= todo.task
                    tr
                        th Registration Date
                        td= todo.date
                    tr
                        th Deadline
                        td= todo.expiration
                    tr
                        th Type
                        td= todo.type
                    tr
                        th Terminated
                        if (todo.done)
                            td Yes
                        else
                            td No
                a.w3-btn.w3-amber.w3-margin(href='/') Back
                a.w3-btn.w3-amber.w3-margin(href='/edit?id='+todo.id) Edit
                a.w3-btn.w3-amber.w3-margin(href='/remove?id='+todo.id) Remove
            footer.w3-container.w3-yellow.w3-padding
                address Generated by FormApp